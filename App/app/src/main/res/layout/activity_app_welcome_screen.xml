<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="342dp"
        android:background="@drawable/circle"
        android:backgroundTint="#DE800020"
        android:contentDescription="@string/imgViewContentDescription"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/welcome_back_text"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <Button
        android:id="@+id/decideBtn"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/decide_btn"
        android:fontFamily="@font/roboto_bold"
        android:onClick="decide"
        android:text="@string/decideBtn"
        android:textColor="#ffffff"
        android:textSize="19sp"
        app:backgroundTint="#DE800020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.064"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/decide_btn"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/my_favorites_text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DD800020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/decide_btn"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/i_want_to_drive"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DE800020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cocktail_group"
        android:layout_width="181dp"
        android:layout_height="158dp"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752"
        app:srcCompat="@drawable/cheers2"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>